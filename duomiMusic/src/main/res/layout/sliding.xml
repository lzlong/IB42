<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="@dimen/sliding_width"
        android:layout_height="match_parent"
        android:background="#666666" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#000000"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="我的音乐"
                android:textColor="#ffffff"
                android:textSize="20dip" />

            <RelativeLayout
                android:id="@+id/rl_sliding_mynusic"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#666666"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/iv_mymusic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dip"
                    android:src="@drawable/default_user_s_navivation" />

                <TextView
                    android:id="@+id/tv_mymusic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/iv_mymusic"
                    android:text="我的音乐"
                    android:textColor="#ffffff"
                    android:textSize="30dp" />

                <ImageView
                    android:id="@+id/tv_mymusic"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/icon_subscribe_more" />
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="在线音乐"
                android:textColor="#ffffff"
                android:textSize="20dip" />

            <LinearLayout
                android:layout_width="280dip"
                android:layout_height="wrap_content"
                android:background="#666666"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dip"
                    android:src="@drawable/icon_chat_pl" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="在线音乐"
                    android:textColor="#ffffff"
                    android:textSize="30dp" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="其它"
                android:textColor="#ffffff"
                android:textSize="20dip" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="#666666"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dip"
                        android:src="@drawable/navigation_handy_setting" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="设置"
                        android:textColor="#ffffff"
                        android:textSize="30dp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/player_line" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="30dip"
                        android:text="仅限Wi-Fi联网"
                        android:textColor="#ffffff"
                        android:textSize="30dip" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="30dip"
                        android:text="手势开启"
                        android:textColor="#ffffff"
                        android:textSize="30dip" />
                </LinearLayout>

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/player_line" />

                <LinearLayout
                    android:id="@+id/sliding_about"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dip"
                        android:src="@drawable/notification" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="30dip"
                        android:text="关于"
                        android:textColor="#ffffff"
                        android:textSize="30dip" />
                </LinearLayout>

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/player_line" />

                <LinearLayout
                    android:id="@+id/sliding_exit"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dip"
                        android:src="@drawable/navigation_quit" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="30dip"
                        android:text="退出"
                        android:textColor="#ffffff"
                        android:textSize="30dip" />
                </LinearLayout>
                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/player_line" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <com.example.duomimusic.MyHSV
        android:id="@+id/myHSV"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scrollbars="none" >

        <LinearLayout
            android:id="@+id/top"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal" >
        </LinearLayout>
    </com.example.duomimusic.MyHSV>

</FrameLayout>